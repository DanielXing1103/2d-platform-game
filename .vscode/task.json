{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/path/to/g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I./include",
                "-L./lib",
                "src/main.cpp",
                "src/glad.c",
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}/myprogram.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++"
        }
    ]
}